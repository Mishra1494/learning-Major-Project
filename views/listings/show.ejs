<% layout("/layouts/boilerplates") %>

    <div class="row">
        <div class="col-8 offset-3">
        <h1><%= data.title %></h1>
        </div>
    <div class="card listing-card col-6 offset-3" >
        <img src="<%= data.image %>" class="card-img-top show-img add-btn" alt="Card-image">
        <div class="card-body">
          <h5 class="card-title"></h5>
          <p class="card-text">
            owned by <b><%= data.owner.username %></b><br>
          </p>
          <p class="card-text">
            <b><%= data.title %></b><br>
          </p>
          <p class="card-text">
            <%= data.description %><br>
          </p>
          <p class="card-text">
            Price:&#8377;<%= data.price.toLocaleString("en-IN")%><br>
          </p>
          <p class="card-text">
            Location:<%=data.location %>,<%=data.country%><br>
          </p>
          <% if(currUser && currUser._id.equals(data.owner._id)){ %> 
          <p class="card-text">  
            <a href="/listings/<%=data._id%>/Edit" class="btn btn-dark">Update</a><br>
          </p>
          <p class="card-text">
            <form method="post" action="/listings/<%=data._id%>/Delete?_method=PATCH">
              <button>Delete</button>
            </form>
        </p>
        <% } %>
        </div>
      </div>
   <div class="card listing-card col-6 offset-3 mb-3" >
    <br>
     <h3>Leave a review</h3>
     <form action="/listings/<%=data._id%>/reviews" method="POST" novalidate class="needs-validation">
       <div class="mb-3 mt-3" class="form-control">
        <label for ="rating" class="form-label">Rating : </label>
        <input type="range" min="1" max="5" id ="rating" name="review[rating]" class="form-range"  >
       </div>
       <div  class="mb-3 mt-3">
         <label for="comment" class="form-label">Comment</label>
         <input 
            name="review[comment]" 
            id="comment" 
            col="20" 
            rows="5" 
            class="form-control" 
            placeholder="Enter the review"
            required>
        
        <div class="invalid-feedback">Please Enter some text for review</div>
       </div>
       <button class="btn btn-outline-dark">Submit</button>
     </form>
     <hr/>
     <p><b>All Review</b></p>
     <hr>
     <div class="row">
     <% for(review of data.reviews){ %>
      <div class="card col-5 ms-3">
        <div class="card-body">
          <h5 class="card-title">John Doe</h5>
          <p class="card-text"><%=review.comment %></p>
          <p class="card-text"><%=review.rating%> stars</p>
        </div>
        <form  action="/listing/<%=data._id%>/reviews/<%=review._id%>/Delete?_method=PATCH" method="POST" class="mb-3 mt-3">
          <button type="button" class = "btn-sm btn btn-dark">Delete</button>
        </form>
      </div>
     <% } %>
    </div>
   </div>
</div>

